{
    "webroot": "wwwroot",
    "version": "1.0.0-*",

    "dependencies": {
        "Microsoft.AspNet.Mvc": "6.0.0-beta4",
        "Microsoft.AspNet.Mvc.TagHelpers": "6.0.0-beta4",
        "Microsoft.AspNet.Diagnostics": "1.0.0-beta4",
        "Microsoft.AspNet.Server.IIS": "1.0.0-beta4",
        "Microsoft.AspNet.Server.WebListener": "1.0.0-beta4",
        "Microsoft.AspNet.StaticFiles": "1.0.0-beta4",
        "Microsoft.AspNet.Tooling.Razor": "1.0.0-beta4",

        "Microsoft.Framework.ConfigurationModel.Json": "1.0.0-beta4",
        "Microsoft.Framework.CodeGenerators.Mvc": "1.0.0-beta4",

        "Microsoft.Framework.Logging": "1.0.0-beta4",
        "Microsoft.Framework.Logging.Console": "1.0.0-beta4",

        "Microsoft.VisualStudio.Web.BrowserLink.Loader": "14.0.0-beta4",
        "PubSub": "1.0.0-*",

        "Microsoft.AspNet.Mvc.WebApiCompatShim": "6.0.0-beta4",
        "Microsoft.AspNet.Http.Extensions": "1.0.0-beta4",
        "Microsoft.AspNet.Http": "1.0.0-beta4",
        "jquery.TypeScript.DefinitelyTyped": "2.2.4",
        "angularjs.TypeScript.DefinitelyTyped": "3.9.2",
        "AngularJS.Core": "1.3.15",
        "AngularJS.Route": "1.3.15"
    },

    "commands": {
        "web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:5000",
        "gen": "Microsoft.Framework.CodeGeneration"
    },

    "frameworks": {
        "dnx451": {
            "frameworkAssemblies": {
                "System.Net.Http": "4.0.0.0"
            }
        }
    },

    "exclude": [
        "wwwroot",
        "node_modules",
        "bower_components"
    ],
    "publishExclude": [
        "node_modules",
        "bower_components",
        "**.xproj",
        "**.user",
        "**.vspscc"
    ],
    "scripts": {
        "postrestore": [ "npm install", "bower install" ],
        "prepare": [ "gulp copy" ]
    }
}
